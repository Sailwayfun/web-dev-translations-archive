---
const { title, description } = Astro.props
const pageTitle = title
  ? `${title} | Sail Web Dev Archive`
  : 'Sail Web Dev Archive'
const metaDescription =
  description ?? 'A minimal archive for translated web development writing.'
---

<!doctype html>
<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="icon" href="data:," />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600;9..144,700&family=Work+Sans:wght@350;420;500;600&display=swap');

      :root {
        color-scheme: light;
        --bg: #f7f4ef;
        --bg-glow: #efe4d4;
        --ink: #211f1a;
        --muted: #5a5247;
        --accent: #c87c3a;
        --card: #fbf8f2;
        --shadow: 0 24px 60px rgba(33, 31, 26, 0.1);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: 'Work Sans', 'Source Sans 3', 'Gill Sans', sans-serif;
        color: var(--ink);
        background:
          radial-gradient(circle at top, var(--bg-glow), transparent 60%),
          radial-gradient(circle at 20% 20%, #ffffff, transparent 45%),
          var(--bg);
        min-height: 100vh;
      }

      body::before {
        content: '';
        position: fixed;
        inset: 0;
        background-image: radial-gradient(
          circle,
          rgba(33, 31, 26, 0.08) 1px,
          transparent 1px
        );
        background-size: 22px 22px;
        opacity: 0.35;
        pointer-events: none;
      }

      a {
        color: var(--ink);
      }

      .shell {
        position: relative;
        max-width: 960px;
        margin: 0 auto;
        padding: 4.5rem 1.5rem 6rem;
      }

      header {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 2rem;
        margin-bottom: 3.5rem;
      }

      header h1 {
        margin: 0;
        font-family: 'Fraunces', serif;
        font-size: clamp(2rem, 4vw, 3.25rem);
        letter-spacing: 0.02em;
      }

      header p {
        margin: 0.35rem 0 0;
        color: var(--muted);
        max-width: 28rem;
      }

      main {
        background: var(--card);
        border-radius: 28px;
        padding: clamp(2rem, 4vw, 3.5rem);
        box-shadow: var(--shadow);
        backdrop-filter: blur(6px);
      }

      .prose {
        line-height: 1.8;
        font-size: 1.05rem;
      }

      .prose h1,
      .prose h2,
      .prose h3 {
        font-family: 'Fraunces', serif;
        margin-top: 2.25rem;
        margin-bottom: 0.75rem;
      }

      .prose h2 {
        font-size: 1.65rem;
      }

      .prose h3 {
        font-size: 1.3rem;
      }

      .prose blockquote {
        margin: 2rem 0;
        padding: 1.2rem 1.5rem;
        border-left: 4px solid var(--accent);
        background: #fff4e8;
        color: #4a3c2d;
      }

      .prose img {
        width: 100%;
        border-radius: 20px;
        display: block;
        margin: 1.5rem 0 0.5rem;
      }

      .prose pre {
        background: #1f1c17;
        color: #f1e9df;
        padding: 1.3rem;
        border-radius: 16px;
        overflow-x: auto;
        font-size: 0.95rem;
      }

      .prose code {
        font-family: 'SFMono-Regular', 'Menlo', 'Consolas', monospace;
        font-size: 0.95em;
      }

      .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem 1.5rem;
        font-size: 0.95rem;
        color: var(--muted);
        margin-bottom: 2rem;
      }

      .tags {
        display: inline-flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .tag {
        background: #fff0e1;
        padding: 0.2rem 0.65rem;
        border-radius: 999px;
        font-size: 0.8rem;
        letter-spacing: 0.03em;
        text-transform: uppercase;
      }

      @media (max-width: 720px) {
        header {
          flex-direction: column;
          align-items: flex-start;
        }

        main {
          padding: 2rem 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="shell">
      <header>
        <div>
          <h1>Sail Web Dev Archive</h1>
          <p>Minimal translations and notes for focused web dev reading.</p>
        </div>
      </header>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
