---
import BaseLayout from '../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
)
---

<BaseLayout
  title="Sail Web Dev Archive"
  description="A minimal archive for translated web development writing."
>
  <section>
    <p class="prose" style="margin-top: 0;">
      A single place to keep translated essays in a calm, readable frame.
    </p>

    {posts.length ? (
      <div class="post-grid" style="margin-top: 2.5rem;">
        {posts.map((post) => (
          <article class="post-card">
            <h2 class="post-title">{post.data.title}</h2>
            <p class="post-desc">{post.data.description}</p>
            <div class="meta">
              <span>{post.data.date.toLocaleDateString('zh-TW')}</span>
              {post.data.tags ? (
                <span class="tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </span>
              ) : null}
            </div>
            <a class="post-link" href={`/blog/${post.slug}`}>
              Read the full article â†’
            </a>
          </article>
        ))}
      </div>
    ) : (
      <p class="prose">No posts yet.</p>
    )}
  </section>
</BaseLayout>
